		<property name="hibernate.format_sql" value="true" />
		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sardb" />
		<property name="javax.persistence.jdbc.user" value="sar" />
		<property name="javax.persistence.jdbc.password" value="sar1234" />
	</properties>
</persistence-unit>
</persistence>
