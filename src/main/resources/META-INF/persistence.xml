<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence">
<persistence-unit name="sardb" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<class>br.ufsc.sar.entity.Aplicacao</class>
	<class>br.ufsc.sar.entity.Caracteristica</class>
	<class>br.ufsc.sar.entity.Espaco</class>
	<class>br.ufsc.sar.entity.Evento</class>
	<class>br.ufsc.sar.entity.EventoCaracteristica</class>
	<class>br.ufsc.sar.entity.EventoProfissional</class>
	<class>br.ufsc.sar.entity.EventoEspaco</class>
	<class>br.ufsc.sar.entity.Horario</class>
	<class>br.ufsc.sar.entity.HorarioEvento</class>
	<class>br.ufsc.sar.entity.HorarioProfissional</class>
	<class>br.ufsc.sar.entity.Profissional</class>
	<class>br.ufsc.sar.entity.HorarioEspaco</class>
	
	<properties>
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
